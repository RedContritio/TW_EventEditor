<UserControl x:Class="Rodemeyer.Visualizing.DotViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Rodemeyer.Visualizing">
  <Grid x:Name="Grid" >
    <ScrollViewer x:Name="ScrollViewer" Background="#FDFDF5"  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
      <local:GraphElement x:Name="DotGraph"/>
    </ScrollViewer>
   
    <TextBlock x:Name="Statistics" 
               IsHitTestVisible="False" 
               Foreground="Gray" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Bottom">
    </TextBlock>

    <TextBlock x:Name="Copyright" 
               IsHitTestVisible="False"
               Foreground="Gray"
               TextAlignment="Center" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Bottom"
               Opacity="0">
      DotViewer Â© 2007 by<LineBreak/>Christian Rodemeyer
    </TextBlock>

  </Grid>
</UserControl>
